<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tvScreen5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 5 - Final Screen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Watch Rewarded Ad Button -->
    <Button
        android:id="@+id/btnWatchRewardAd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Watch Ad to Earn Reward"
        android:layout_below="@id/tvScreen5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Finish Button -->
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_below="@id/btnWatchRewardAd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Banner AdView pinned to bottom -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</RelativeLayout>